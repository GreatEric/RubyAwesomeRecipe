<div class="row">
    <div class="col-xs-4 col-xs-offset-4">
        <h3>Login</h3>
    </div>

    <%= form_tag '/login' do%>
    <div class="row">
        <div class="col-xs-4 col-xs-offset-4">
            <div>Name:</div> <div><%= text_field_tag :name %></div>
            <div>Password:</div> <div><%= password_field_tag :password %></div>
            <%= submit_tag "Submit" %>
        </div>
    </div>
    <% end %>

</div>




