<% if @recipes.first %>
    <div class="row">
        <div class="col-xs-8 col-xs-offset-2">
            <h3>Recipes by: <%= @user.name %></h3>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-8 col-xs-offset-2">
            <%= render 'recipes/recipes_listed', recipes: @recipes %>
        </div>
    </div>
<% end %>
<% if logged_in? && current_user.owns?(params[:id])%>
  <% if @favorites.first %>
    <div class="row">
        <div class="col-xs-8 col-xs-offset-2">
            <h3>Here are your favorite Recipes:</h3>
        </div>
    </div>
    <%= render 'recipes/favorites_listed', favorites: @favorites %>
  <% end %>
  <div class="row">
      <div class="col-xs-8 col-xs-offset-2">
          <h1>Add your own recipe now!</h1>
      </div>
  </div>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
        <div class="well well-lg">
            <%= render 'recipes/form', recipe: @recipe, ingredient: @ingredients %>
        </div>
    </div>
  </div>

  <div class="row">
      <div class="col-xs-8 col-xs-offset-2">
          <h3><%= link_to "Make Other Users Admins", user_admin_index_path(current_user) if current_user.admin?%></h3>
      </div>
  </div>
<% end %>
